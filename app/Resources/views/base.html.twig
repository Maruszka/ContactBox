<!DOCTYPE html>
<html>
    <head>
        {% block head %}

            <meta charset="UTF-8" />
            <title>{% block title %}Contact Box{% endblock %}</title>
            {% block stylesheets %} 
                <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
                <link rel="stylesheet" href="style.css" />

            {% endblock %}
            <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% endblock %}
    </head>
    <body>


        {% block body %}
            <nav class="navbar navbar-inverse">
                {% block navbar %}
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            <a class="navbar-brand" href="#">ConntactBox</a>
                        </div>
                        <div class="collapse navbar-collapse" id="myNavbar">
                            <ul class="nav navbar-nav">
                                <li class="active"><a href="{{url("contactbox_person_showallcontacts")}}">All Contacts</a></li>
                                <li><a href="#"></a></li>
                            </ul>
                            <form class="navbar-form navbar-right" role="search">
                                <div class="form-group input-group">
                                    <input type="text" class="form-control" placeholder="Search..">
                                    <span class="input-group-btn">
                                        <button class="btn btn-default" type="button">
                                            <span class="glyphicon glyphicon-search"></span>
                                        </button>
                                    </span>
                                </div>
                            </form>
                            <ul class="nav navbar-nav navbar-right">
                                <li><a href="{{url("contactbox_person_createnew")}}"><span class="glyphicon glyphicon-user"></span> Add Contact</a></li>
                            </ul>
                        </div>
                    </div>
                {% endblock %}
            </nav>

            <div class="container text-center">
                <div class="row">
                    <div class="col-sm-3 well">
                        {% block groups %}

                        {% endblock %}
                    </div>
                    <div class="col-sm-9">

                        {%block mainBody %}

                            <div class="row">
                                <div class="col-sm-12">
                                    {% block titleBody %}

                                    {% endblock %}
                                </div>
                            </div>


                            <div class="row">
                                <table class="table table-striped">
                                    {% block contact %}

                                        <div class="col-sm-12">
                                            {% block headContact %} {% endblock %}

                                            {% block contactList %}
                                                {% block list %} {% endblock %}
                                            {% endblock %}

                                        </div>
                                    {% endblock %}
                                </table>
                            </div>
                        </div>


                    {% endblock %}

                </div>

            </div>
        </div>

        <footer class="container-fluid text-center">   {% block footer %}        {% endblock %} </footer>

    {% endblock %}
{% block javascripts %}{% endblock %}
</body>
</html>
